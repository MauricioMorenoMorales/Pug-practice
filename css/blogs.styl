@import "./stylus/_config.styl"
@import "./stylus/_header.styl"

.hero
     display                grid
     grid-template-columns  2fr 1fr
     background-color       claro-secundario
     padding                50px 170px
     &__photo
          figure
               img
                    width: 100%
     &__text
          font-size: 18px
          div 
               a  
                    button 
                         button()

main      
     h2   
          display: flex
          justify-content: center

.blogs
     margin: 100px auto
     max-width 1200px
     .blogs-container
          display: grid
          grid-template-columns: 1fr 1fr 1fr
          grid-gap: 15px
          .blog-item
               margin-bottom: 30px
               figure
                    margin: 0
                    img  
                         width: 100%
               &__text
                    a 
                         button 
                              button()