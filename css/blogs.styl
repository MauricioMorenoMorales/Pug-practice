@import "./stylus/_config.styl"
@import "./stylus/_header.styl"

.hero
     display                grid
     grid-template-columns  2fr 1fr
     background-color       claro-secundario
     padding                50px 170px
     &__photo
          figure
               img
                    width: 100%
     &__text
          font-size: 18px
          div 
               a  
                    button 
                         button()

main      
     h2   
          display: flex
          justify-content: center
          border-bottom: 1px solid claro-secundario
          margin: 40px auto 70px
          width: 70%
.blogs
     margin: 60px auto
     max-width 1200px
     .blogs-container
          display: grid
          grid-template-columns: 1fr 1fr 1fr
          grid-gap: 15px
          .blog-item
               margin-bottom: 30px
               figure
                    margin: 0
                    img  
                         width: 100%
               &__text
                    a 
                         button 
                              button()
footer 
     height: 100px
     background-color: primario
     color: claro
     border-top: 40px solid secundario 
     display: flex
     justify-content: center
     align-items: center