@import "_config.styl"
@import "_header.styl"

main
     height               calc(100vh - 140px)
     background-image     url('../images/Cover.png')
     background-position  center
     background-size      cover
     display              flex
     flex-direction       column
     justify-content      center
     align-items          center
     h1
          margin-top      -200px
          font-size       50px
          letter-spacing  10px
          line-height     80px
          color           color-claro
     a
          button
               background-color  azul-claro
               height            50px
               width             250px
               border            none
               font-size         20px
               color             color-claro
               font-weight       700