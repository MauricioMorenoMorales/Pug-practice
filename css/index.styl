@import "./stylus/_config.styl"
@import "./stylus/_headers.styl"

main
     height               calc(100vh - 140px)
     background-image     url('../images/Cover.png')
     background-position  center
     background-size      cover
     display              flex
     flex-direction       column
     justify-content      center
     align-items          center
     h1
          margin-top      -200px
          font-size       50px
          letter-spacing  10px
          line-height     80px
          color           claro
     a
          button
               background-color  primario
               height            50px
               width             250px
               border            none
               font-size         20px
               color             claro
               font-weight       700

@media screen and (max-width 850px)
     main  
          h1
               font-size: 40px
@media screen and (max-width 700px)
     main  
          h1
               letter-spacing: 2px
@media screen and (max-width 550px)
     main  
          h1
               font-size: 30px
               line-height: 40px
          a  
               button
                    height: 40px
                    width: 200px
                    font-size: 20px
                    font-weight: 500
@media screen and (max-width 400px)
     main  
          h1
               font-size: 20px
               line-height: 25px
          a  
               button
                    height: 25px
                    width: 200px
                    font-size: 15px
                    font-weight: 500